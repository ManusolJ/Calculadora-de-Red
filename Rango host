import java.net.InetAddress;
import java.net.UnknownHostException;

public class CalcularRangoHost {

    public static void main(String[] args) {
        String direccionIP = "192.168.1.10";
        String mascaraSubred = "255.255.255.0";

        try {
            InetAddress direccion = InetAddress.getByName(direccionIP);
            InetAddress mascara = InetAddress.getByName(mascaraSubred);

            byte[] direccionBytes = direccion.getAddress();
            byte[] mascaraBytes = mascara.getAddress();

            byte[] redBytes = new byte[direccionBytes.length];
            for (int i = 0; i < direccionBytes.length; i++) {
                redBytes[i] = (byte) (direccionBytes[i] & mascaraBytes[i]);
            }

            byte[] broadcastBytes = new byte[direccionBytes.length];
            for (int i = 0; i < direccionBytes.length; i++) {
                broadcastBytes[i] = (byte) ((direccionBytes[i] & mascaraBytes[i]) | (~mascaraBytes[i] & 0xFF));
            }

            InetAddress direccionRed = InetAddress.getByAddress(redBytes);
            InetAddress direccionBroadcast = InetAddress.getByAddress(broadcastBytes);

            System.out.println("Dirección de Red: " + direccionRed.getHostAddress());
            System.out.println("Dirección de Broadcast: " + direccionBroadcast.getHostAddress());

        } catch (UnknownHostException e) {
            e.printStackTrace();
        }

    }
}

