import java.util.Scanner;

public class CalcularHostSubred {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Ingresa la máscara de subred en formato CIDR (por ejemplo, 24): ");
        int mascaraSubred = scanner.nextInt();

        int hosts = calcularHosts(mascaraSubred);

        System.out.println("Número de hosts por subred: " + hosts);
    }

    private static int calcularHosts(int mascaraSubred) {
        return (int) Math.pow(2, 32 - mascaraSubred);
    }
}

